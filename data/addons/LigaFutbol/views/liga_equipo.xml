<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ===============================================================
         ACCIÓN: Abre las vistas de equipo desde el menú
         =============================================================== -->
    <record id="liga_equipo_action" model="ir.actions.act_window">
        <field name="name">Equipos de la liga</field>
        <field name="res_model">liga.equipo</field>
        <field name="view_mode">list,kanban,form,graph</field>
    </record>

    <!-- ===============================================================
         MENÚ PRINCIPAL Y SUBMENÚ DE EQUIPOS
         =============================================================== -->
    <menuitem name="Gestión de liga" id="liga_base_menu"/>
    <menuitem name="Equipos"
              id="liga_equipo_menu"
              parent="liga_base_menu"
              action="liga_equipo_action"/>

    <!-- ===============================================================
         FORM VIEW: Vista de formulario para editar un equipo
         =============================================================== -->
    <record id="liga_equipo_view_form" model="ir.ui.view">
        <field name="name">Formulario de equipo de futbol</field>
        <field name="model">liga.equipo</field>
        <field name="arch" type="xml">
            <form string="Ficha del equipo">
                <sheet>
                    <group>
                        <group>
                            <field name="nombre"/>
                            <field name="escudo" widget="image" class="oe_avatar"/>
                            <field name="fecha_fundacion"/>
                            <field name="fecha_registro" readonly="1"/>
                            <field name="estadio"/>
                        </group>
                        <group>
                            <field name="descripcion"/>
                            <field name="presupuesto"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ===============================================================
         LIST VIEW: Lista tabular de equipos
         =============================================================== -->
    <record id="liga_equipo_view_list" model="ir.ui.view">
        <field name="name">Lista de Equipos de la liga</field>
        <field name="model">liga.equipo</field>
        <field name="arch" type="xml">
            <list string="Listado de Equipos">
                <field name="nombre"/>
                <field name="escudo" widget="image" class="oe_avatar"/>
                <field name="fecha_fundacion"/>
                <field name="presupuesto"/>
                <field name="estadio"/>
            </list>
        </field>
    </record>

    <!-- ===============================================================
         SEARCH VIEW: Barra de búsqueda
         =============================================================== -->
    <record id="liga_equipo_view_search" model="ir.ui.view">
        <field name="name">Búsqueda de Equipos por nombre</field>
        <field name="model">liga.equipo</field>
        <field name="arch" type="xml">
            <search>
                <field name="nombre"/>
            </search>
        </field>
    </record>

    <!-- ===============================================================
         KANBAN VIEW: Vista en tarjetas (corregida)
         =============================================================== -->
    <record id="liga_equipo_view_kanban" model="ir.ui.view">
        <field name="name">Lista de Equipo</field>
        <field name="model">liga.equipo</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="nombre"/>
                <field name="escudo"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_global_click o_kanban_record">
                            <div class="o_kanban_image_inner_pic">
                                <img t-att-src="'/web/image/liga.equipo/' + record.id + '/escudo'"
                                     class="oe_kanban_image"
                                     alt="Escudo"/>
                                <div class="o_kanban_details">
                                    <strong><field name="nombre"/></strong>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- ===============================================================
         GRAPH VIEW: Gráfico de puntos por equipo
         =============================================================== -->
    <record id="liga_equipo_view_graph" model="ir.ui.view">
        <field name="name">Puntos por equipo</field>
        <field name="model">liga.equipo</field>
        <field name="type">graph</field>
        <field name="arch" type="xml">
            <graph string="Puntos por equipo">
                <field name="nombre" group="True" type="row"/>
                <field name="puntos" group="True" type="measure"/>
            </graph>
        </field>
    </record>

</odoo>
